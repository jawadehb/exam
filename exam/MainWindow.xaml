<Window x:Class="exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>

        <Menu>
            <MenuItem x:Name="BtnHome" Header="Home" Click="BtnHome_Click" Height="20"/>
            <MenuItem x:Name="BtnAccount" Header="Account" Click="BtnAccount_Click" />
            <MenuItem x:Name="BtnPlay" Header="Play" Click="BtnPlay_Click"/>
            <MenuItem x:Name="BtnLeaderboard" Header="Leaderboard" Click="BtnLeaderboard_Click" />
            <MenuItem x:Name="BtnFriends" Header="Friends" Click="BtnFriends_Click" />
        </Menu>

        <Frame x:Name="Main" Margin="0,20,0,-414" NavigationUIVisibility="Hidden"/>

        <Grid.RowDefinitions>
            <RowDefinition Height="20.04"/>
        </Grid.RowDefinitions>



    </Grid>
</Window>
