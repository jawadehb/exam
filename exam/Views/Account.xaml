<Page x:Class="exam.Views.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:exam.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Account">

    <Grid Background="#FF008071">
        <TextBlock Text="Login" Margin="169,26,169,304" FontSize="72" TextAlignment="Center" />
        <TextBlock Text="Username" Margin="205,135,133,195" FontSize="24" TextAlignment="Left" FontWeight="Bold" />
        <TextBlock Text="Password" Margin="205,229,133,101"  FontSize="24" TextAlignment="left" FontWeight="Bold" />
        <TextBox x:Name="Username" HorizontalAlignment="Left" Margin="205,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="317" Height="34"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Margin="205,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="317" Height="34"/>
        <Button x:Name="btnReg" Content="Register" HorizontalAlignment="Left" Height="30" Margin="212,365,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click_1"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Height="30" Margin="0,365,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>


    </Grid>
</Page>
